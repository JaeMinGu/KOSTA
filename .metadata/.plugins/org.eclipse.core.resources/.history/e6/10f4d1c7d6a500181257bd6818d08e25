/**
 * LIFO 구조의 스택 구현 
 * 
 * @author 최재민
 *
 */
public class Stack {
	// 인스턴스 변수 
	private int[] array;
	int i = 0 ; 
	
	// 생성자 
	public Stack() {
		this(10);
	}
	
	public Stack(int size) {
		array = new int[size];
	}
	
	// 인스턴스 메소드 
	public void push (int value) {
		array[i]= value; 
		i++;
	}
	
	public int pop() {
		int top = array[i-1];
		i--;
		return top;
	}
	
	public int length() {
		return i; 
	}
	
	// 메인 메소드 
	public static void main(String[] args) {
		Stack stack = new Stack(100);
		stack.push(5);
		stack.push(3);
		stack.push(2);
		
		// 테스트를 위한 출력
		System.out.println(stack.pop());
		System.out.println(stack.pop());
		System.out.println(stack.pop());
		
		System.out.println(stack.length());
		
	}// main
}
