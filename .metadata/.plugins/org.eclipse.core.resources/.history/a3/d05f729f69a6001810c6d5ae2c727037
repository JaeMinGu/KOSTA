/**
 * LIFO 구조의 스택 구현 
 * 
 * @author 최재민
 *
 */
public class Stack {
	/**
	 * instance variable
	 */
	private int[] array;
	int i = 0 ; 
	
	/**
	 * constructor
	 */
	public Stack() {
		this(10);
	}
	
	public Stack(int size) {
		array = new int[size];
	}
	
	/**
	 * instance method(push)
	 * @param size
	 */
	
	public void push (int value) {
		array[i]= value; 
		i++;
	}
	
	
	/**
	 * instance method(pop)
	 * @return
	 */
	public int pop() {
		int top = array[i-1];
		i--;
		return top;
	}
	
	/**
	 * instance method(length)
	 * @return
	 */
	public int length() {
		return i; 
	}
	
	 
	/**
	 * main method 
	 * @param args
	 */
	public static void main(String[] args) {
		Stack stack = new Stack(100);
		stack.push(5);
		stack.push(3);
		stack.push(2);
		
		// 테스트를 위한 출력
		System.out.println(stack.pop());
		System.out.println(stack.pop());
		System.out.println(stack.pop());
		
		System.out.println(stack.length());
		
	}// main
}
