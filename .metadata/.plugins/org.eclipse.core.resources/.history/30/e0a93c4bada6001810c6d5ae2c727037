
public class InheritanceExample {

	public static void main(String[] args) {

		Bicycle bicycle;
		bicycle = new Bicycle(10, "삼천리");

		System.out.println(bicycle.id);
		System.out.println(bicycle.brand);
		System.out.println();

		MountainBicycle mountainBicycle = new MountainBicycle(10, "삼천포", "카본", true);
		// 재사용
		System.out.println("brand:" + "\t" + mountainBicycle.brand);
		System.out.println("id:" + "\t" + mountainBicycle.id);
		// 확장
		System.out.println("frame:" + "\t" + mountainBicycle.frame);
		System.out.println("suspension:" + "\t" + mountainBicycle.suspension);

	}

}
